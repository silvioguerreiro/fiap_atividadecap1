> library(readxl)
> Relatorio_Farm <- read_excel("Relatorio_Farm.xlsx")
> View(Relatorio_Farm)
> # ETAPA 1: Pacotes
> # ==========================
> # install.packages("dplyr")  # rode uma vez se precisar
> library(dplyr)
> # ETAPA 2: Preparar dados
> df <- Relatorio_Farm %>%
+     transmute(
+         Cultura      = as.character(Cultura),
+         Area_m2      = as.numeric(`Área (m²)`),
+         Total_Insumo = as.numeric(`Total Insumo (L ou Kg)`)
+     ) %>%
+     filter(Cultura %in% c("Soja", "Milho"))
> # ETAPA 3: Média e Desvio por Cultura
> resultado <- df %>%
+   group_by(Cultura) %>%
+   summarise(
+     n_registros    = n(),
+     media_area_m2  = mean(Area_m2, na.rm = TRUE),
+     desvio_area_m2 = sd(Area_m2,   na.rm = TRUE),
+     media_insumo   = mean(Total_Insumo, na.rm = TRUE),
+     desvio_insumo  = sd(Total_Insumo,   na.rm = TRUE),
+     .groups = "drop"
+   ) %>%
+   # arredonda para facilitar leitura
+   mutate(across(where(is.numeric), ~ round(., 2)))
> # ETAPA 4: Resultado
> print(resultado)
